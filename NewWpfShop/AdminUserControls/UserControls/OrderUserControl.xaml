<UserControl x:Class="NewWpfShop.AdminUserControls.UserControls.OrderUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NewWpfShop.AdminUserControls.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="900">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.01*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="0.01*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.25*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0.25*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Grid.Column="1" Background="White">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.19*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" Content="Номер заказа - " FontSize="18" FontWeight="Bold" VerticalAlignment="Center"/>
            <Label Grid.Column="1" x:Name="labelID" Content="..." FontSize="18" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Left"/>
        </Grid>
        <Grid Grid.Row="1" Grid.Column="1" Background="White">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Grid.Column="0" Content="Статус:" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Left"/>
            <Label Grid.Row="1" Grid.Column="0" Content="Дата заказа:" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Left"/>
            <Label Grid.Row="2" Grid.Column="0" Content="Дата выдачи:" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Left"/>
            <Label Grid.Row="3" Grid.Column="0" Content="Пункт выдачи:" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Left"/>
            <Label Grid.Row="4" Grid.Column="0" Content="Сумма заказа:" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Left"/>
            <Button Visibility="Visible" Grid.Row="5" Grid.Column="0" Background="#0356FF" Foreground="White" BorderThickness="0" FontSize="14" FontWeight="Bold" Click="Checkchek_Click" Margin="1">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Cursor" Value="Hand"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
BorderBrush="{TemplateBinding BorderBrush}"
BorderThickness="{TemplateBinding BorderThickness}"
SnapsToDevicePixels="True"
CornerRadius="8">
                                        <!-- Добавляем закругленные границы -->
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#0356FF"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
                Посмотреть чек

            </Button>

            <Label Grid.Row="0" Grid.Column="1" x:Name="labelStatus" Content="Выдан/Не выдан" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Left"/>
            <Label Grid.Row="1" Grid.Column="1" x:Name="labelDate" Content="00.00.0000" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Left"/>
            <Label Grid.Row="2" Grid.Column="1" x:Name="labelTime" Content="00.00" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Left"/>
            <Label Grid.Row="3" Grid.Column="1" x:Name="labelPickup" Content="г.Уфа, ул. ..." FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Left"/>
            <Label Grid.Row="4" Grid.Column="1" x:Name="labelTotal" Content="0 Р" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Left"/>
            <Button x:Name="btnMake" Grid.Row="0" Grid.RowSpan="2" Grid.Column="1" Visibility="Visible" FontSize="18" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,20,0" Click="MakeOrder_Click" Width="160" Background="#0356FF" Foreground="White" BorderThickness="0" FontWeight="Bold" Height="30">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Cursor" Value="Hand"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
BorderBrush="{TemplateBinding BorderBrush}"
BorderThickness="{TemplateBinding BorderThickness}"
SnapsToDevicePixels="True"
CornerRadius="8">
                                        <!-- Добавляем закругленные границы -->
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#0356FF"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
                Выдать заказ
            </Button>

            <Button x:Name="btnCancel" Grid.Row="1" Grid.RowSpan="3" Grid.Column="1" Visibility="Visible" FontSize="18" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,20,0" Click="CancelOrder_Click" Width="160" Background="#0356FF" Foreground="White" BorderThickness="0" FontWeight="Bold" Height="30">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Cursor" Value="Hand"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
BorderBrush="{TemplateBinding BorderBrush}"
BorderThickness="{TemplateBinding BorderThickness}"
SnapsToDevicePixels="True"
CornerRadius="8">
                                        <!-- Добавляем закругленные границы -->
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#0356FF"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
                Отменить заказ
            </Button>

        </Grid>
        <Grid Grid.Row="2" Grid.Column="1" Background="White">

            <Button x:Name="ShowMenuButton" HorizontalAlignment="Left" VerticalAlignment="Center" Visibility="Visible" Grid.Column="0" Background="#0356FF" Foreground="White" BorderThickness="0" FontSize="16" FontWeight="Bold" Click="ShowOrHideMenu_Click" Width="147" Height="25" Margin="1">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Cursor" Value="Hand"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
BorderBrush="{TemplateBinding BorderBrush}"
BorderThickness="{TemplateBinding BorderThickness}"
SnapsToDevicePixels="True"
CornerRadius="8">
                                        <!-- Добавляем закругленные границы -->
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#0356FF"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
                1 товар
            </Button>
            <Popup x:Name="FormPopup" Placement="Bottom" PlacementTarget="{Binding ElementName=ShowMenuButton}" StaysOpen="False">
                <Border Background="White" BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Padding="10">
                    <Grid Width="500">
                        <ListView x:Name="listview">
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                </Style>
                            </ListView.ItemContainerStyle>
                        </ListView>
                    </Grid>
                </Border>
            </Popup>
        </Grid>
    </Grid>
</UserControl>