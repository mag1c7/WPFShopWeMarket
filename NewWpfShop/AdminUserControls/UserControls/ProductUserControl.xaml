<UserControl x:Class="NewWpfShop.AdminUserControls.UserControls.ProductUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NewWpfShop.AdminUserControls.UserControls"
             mc:Ignorable="d" 
            d:DesignHeight="370" d:DesignWidth="293" MinHeight="370" MinWidth="293" MaxHeight="380" MaxWidth="293" PreviewMouseDoubleClick="ProductUserControl_MouseDoubleClick">
    <Border Background="White" BorderBrush="White" BorderThickness="1" CornerRadius="15">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.08*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="0.08*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="0.02*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="0.14*"/>
                <RowDefinition Height="0.14*"/>
                <RowDefinition Height="0.14*"/>

                <RowDefinition Height="0.02*"/>
            </Grid.RowDefinitions>
            <Border Grid.Row="1" Grid.Column="1" BorderBrush="Black" BorderThickness="1">
                <Image Grid.Row="1" Grid.Column="1" x:Name="image" Source="/Assets/DefaultImage.png" Height="250" Width="250" Stretch="UniformToFill"/>
            </Border>
            <Label x:Name="labelid" Visibility="Collapsed"/>
            <Grid Grid.Row="1" Grid.Column="1" Height="50" Width="50" HorizontalAlignment="Right" VerticalAlignment="Top">
                <Button x:Name="FavoriteButton" Click="FavoriteButton_Click" BorderBrush="Transparent" Background="Transparent" Margin="3">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Ellipse x:Name="FavoriteEllipse">
                                <Ellipse.Fill>
                                    <ImageBrush x:Name="FavoriteImageBrush" ImageSource="/Assets/FavoriteProduct.png" Stretch="UniformToFill"/>
                                </Ellipse.Fill>
                            </Ellipse>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
            <Grid Grid.Row="2" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.35*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Label Content="Название:" FontSize="12"/>
                <Label Grid.Row="2" Grid.Column="1" x:Name="labelname" FontWeight="Bold" Content="null" FontSize="12"/>
            </Grid>
            <Grid Grid.Row="3" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.50*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="0.7*"/>
                    <ColumnDefinition Width="0.7*"/>
                </Grid.ColumnDefinitions>
                <Label Content="Цена:" FontSize="12"/>
                <Label Grid.Column="1" x:Name="labelprice" Content="null" HorizontalAlignment="Left" FontSize="14"/>
                <Label Content="Кол-во:" Grid.Column="2" HorizontalAlignment="Right" FontSize="12"/>
                <Label Grid.Column="3" x:Name="labelcount" Content="null" HorizontalAlignment="Left" FontSize="14"/>
            </Grid>
            <Grid Grid.Row="4" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.38*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <!--<Label Content="Описание:"/>
                <TextBlock Grid.Row="4" Grid.Column="1" x:Name="labeldesc" Text="null" TextWrapping="Wrap" HorizontalAlignment="Left"/>-->
            </Grid>
            <Grid Grid.Row="4" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="0.01*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button x:Name="BAddToCart" Visibility="Visible" Grid.Row="0" Grid.Column="0" Background="#0356FF" Foreground="White" BorderThickness="0" FontSize="12" FontWeight="Bold" Click="ButtonAddToCart">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
BorderBrush="{TemplateBinding BorderBrush}"
BorderThickness="{TemplateBinding BorderThickness}"
SnapsToDevicePixels="True"
CornerRadius="8">
                                            <!-- Добавляем закругленные границы -->
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#0356FF"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    Добавить в корзину

                </Button>
                <Button x:Name="BBuyNow" Visibility="Visible" Grid.Row="0" Grid.Column="2" Content="Купить сейчас" Padding="0" BorderThickness="0" Background="White" Foreground="#0356FF" FontWeight="Normal" FontSize="16" Cursor="Hand" Click="ButtonBuyNow">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Foreground" Value="Blue"/>
                                </Trigger>
                                <EventTrigger RoutedEvent="MouseEnter">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetProperty="(Button.Foreground).(SolidColorBrush.Color)" To="Blue" Duration="0:0:0"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                                <EventTrigger RoutedEvent="MouseLeave">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetProperty="(Button.Foreground).(SolidColorBrush.Color)" To="Gray" Duration="0:0:0"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                <Button x:Name="BGoToCart" Visibility="Collapsed" Grid.Row="0" Grid.Column="2" Background="#0356FF" Foreground="White" BorderThickness="0" FontSize="13" FontWeight="Bold" Click="ButtonGoToCart">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
BorderBrush="{TemplateBinding BorderBrush}"
BorderThickness="{TemplateBinding BorderThickness}"
SnapsToDevicePixels="True"
CornerRadius="8">
                                            <!-- Добавляем закругленные границы -->
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#0356FF"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    Перейти в корзину

                </Button>
                <Grid Grid.Column="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.6*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="0.6*"/>
                    </Grid.ColumnDefinitions>
                    <Button x:Name="BPlus" Grid.Column="2" Background="#0356FF" Foreground="White" Visibility="Collapsed" BorderThickness="0" FontSize="16" FontWeight="Bold" Click="ButtonPlus">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
BorderBrush="{TemplateBinding BorderBrush}"
BorderThickness="{TemplateBinding BorderThickness}"
SnapsToDevicePixels="True"
CornerRadius="8">
                                                <!-- Добавляем закругленные границы -->
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#0356FF"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        +

                    </Button>
                    <TextBox Grid.Column="1" x:Name="TextboxPoint" Text="1" TextWrapping="Wrap" Visibility="Collapsed" PreviewTextInput="TextboxPoint_PreviewTextInput" DataObject.Pasting="TextboxPoint_Pasting" TextChanged="TextboxPoint_TextChanged">
                        <TextBox.Style>
                            <Style TargetType="TextBox" xmlns:sys="clr-namespace:System;assembly=mscorlib">
                                <Style.Resources>
                                    <VisualBrush x:Key="CueBannerBrush" AlignmentX="Center" AlignmentY="Center" Stretch="None">
                                        <VisualBrush.Visual>
                                            <Label Content="1" Foreground="LightGray" />
                                        </VisualBrush.Visual>
                                    </VisualBrush>
                                </Style.Resources>
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderThickness" Value="0 0 0 1"/>
                                <!-- Убираем левый, верхний и правый края, оставляем только нижнюю линию -->
                                <Setter Property="BorderBrush" Value="Gray"/>
                                <!-- Устанавливаем жёлтую нижнюю линию -->
                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                <Setter Property="VerticalContentAlignment" Value="Center"/>
                                <Style.Triggers>
                                    <Trigger Property="Text" Value="{x:Static sys:String.Empty}">
                                        <Setter Property="Background" Value="{StaticResource CueBannerBrush}" />
                                    </Trigger>
                                    <Trigger Property="Text" Value="{x:Null}">
                                        <Setter Property="Background" Value="{StaticResource CueBannerBrush}" />
                                    </Trigger>
                                    <Trigger Property="IsKeyboardFocused" Value="True">
                                        <Setter Property="Background" Value="White" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                    <Button x:Name="BMinus" Grid.Column="0" Background="#0356FF" Foreground="White" Visibility="Collapsed" BorderThickness="0" FontSize="16" FontWeight="Bold" Click="ButtonMinus">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
BorderBrush="{TemplateBinding BorderBrush}"
BorderThickness="{TemplateBinding BorderThickness}"
SnapsToDevicePixels="True"
CornerRadius="8">
                                                <!-- Добавляем закругленные границы -->
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#0356FF"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        -
                    </Button>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</UserControl>