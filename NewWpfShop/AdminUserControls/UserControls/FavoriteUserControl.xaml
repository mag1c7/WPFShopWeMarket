<UserControl x:Class="NewWpfShop.AdminUserControls.UserControls.FavoriteUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NewWpfShop.AdminUserControls.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="293" MinHeight="400" MinWidth="293" PreviewMouseDoubleClick="ProductUserControl_MouseDoubleClick">
    <Border Background="White" BorderBrush="White" BorderThickness="1" CornerRadius="15">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.08*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="0.08*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="0.02*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="0.14*"/>
                <RowDefinition Height="0.14*"/>
                <RowDefinition Height="0.01*"/>
                <RowDefinition Height="0.14*"/>
                <RowDefinition Height="0.02*"/>
            </Grid.RowDefinitions>
            <Border Grid.Row="1" Grid.Column="1" BorderBrush="Black" BorderThickness="1">
                <Image Grid.Row="1" Grid.Column="1" x:Name="image" Source="/Assets/DefaultImage.png" Height="250" Width="250" Stretch="UniformToFill"/>
            </Border>
            <Button x:Name="BAddToCart" Grid.Row="4" Grid.Column="1" Background="#0356FF" Foreground="White" BorderThickness="0" FontSize="12" FontWeight="Bold" Click="ButtonAddToCart" Grid.ColumnSpan="2" Margin="0,2,20,3" Grid.RowSpan="2">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Cursor" Value="Hand"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
BorderBrush="{TemplateBinding BorderBrush}"
BorderThickness="{TemplateBinding BorderThickness}"
SnapsToDevicePixels="True" CornerRadius="8">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#0356FF"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
                Добавить в корзину
            </Button>
            <Button Visibility="Collapsed" x:Name="BGoToCart" Grid.Row="5" Grid.Column="1" Background="#ff0694" Foreground="White" BorderThickness="0" FontSize="12" FontWeight="Bold" Click="ButtonAddGoToCart">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Cursor" Value="Hand"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
BorderBrush="{TemplateBinding BorderBrush}"
BorderThickness="{TemplateBinding BorderThickness}"
SnapsToDevicePixels="True" CornerRadius="8">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#ff0694"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
                В корзине
            </Button>
            <Grid Grid.Row="1" Grid.Column="1" Height="50" Width="50" HorizontalAlignment="Right" VerticalAlignment="Top">
                <Button x:Name="FavoriteButton" Click="FavoriteButton_Click" BorderBrush="Transparent" Background="Transparent" Margin="3">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Ellipse x:Name="FavoriteEllipse">
                                <Ellipse.Fill>
                                    <ImageBrush x:Name="FavoriteImageBrush" ImageSource="/Assets/FavoriteProduct.png" Stretch="UniformToFill"/>
                                </Ellipse.Fill>
                            </Ellipse>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
            <Grid Grid.Row="2" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.35*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Label Content="Название:"/>
                <Label Grid.Row="2" Grid.Column="1" x:Name="labelname" Content="null"/>
            </Grid>
            <Grid Grid.Row="3" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.5*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="0.5*"/>
                </Grid.ColumnDefinitions>
                <Label Content="Цена:"/>
                <Label Grid.Column="1" x:Name="labelprice" Content="null" HorizontalAlignment="Left"/>
                <Label Content="Кол-во:" Grid.Column="2" HorizontalAlignment="Right"/>
                <Label Grid.Column="3" x:Name="labelcount" Content="null" HorizontalAlignment="Left"/>
            </Grid>
            <Grid Grid.Row="4" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.38*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
            </Grid>
        </Grid>
    </Border>
</UserControl>
