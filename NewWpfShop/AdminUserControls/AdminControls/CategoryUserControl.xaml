<UserControl x:Class="NewWpfShop.AdminUserControls.AdminControls.CategoryUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NewWpfShop.AdminUserControls.AdminControls"
             mc:Ignorable="d" 
             d:DesignHeight="110" Height="110" d:DesignWidth="360" Background="White">
    <Border BorderBrush="Black" BorderThickness="0.5" Margin="2">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.01*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="0.01*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="0.02*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="0.02*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="1" Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.7*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="0.4*"/>
                    <ColumnDefinition Width="0.4*"/>
                </Grid.ColumnDefinitions>
                <Label Content="Название:" HorizontalAlignment="Right" VerticalAlignment="Bottom" FontSize="14"/>
                <Label Name="labelName" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Bottom" FontSize="14"/>
                <Label Visibility="Collapsed" Content="id категории:" Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Top" FontSize="14"/>
                <Label Visibility="Collapsed" Name="labelId" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                <Button Grid.Column="3" x:Name="DeleteButton" Click="DeleteButton_Click" BorderBrush="Transparent" Background="Transparent" Margin="3" Width="50" HorizontalAlignment="Right">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Rectangle x:Name="FavoriteEllipse">
                                <Rectangle.Fill>
                                    <ImageBrush x:Name="FavoriteImageBrush" ImageSource="/Assets/BinImage.png" Stretch="Uniform"/>
                                </Rectangle.Fill>
                            </Rectangle>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button Grid.Column="2" x:Name="ChangeButton" Click="ChangeButton_Click" BorderBrush="Transparent" Background="Transparent" Margin="3" Width="50" HorizontalAlignment="Right">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Rectangle x:Name="FavoriteEllipse">
                                <Rectangle.Fill>
                                    <ImageBrush x:Name="FavoriteImageBrush" ImageSource="/Assets/EditImage.png" Stretch="Uniform"/>
                                </Rectangle.Fill>
                            </Rectangle>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </Grid>
    </Border>
</UserControl>
